                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-sm text-center">
                                <thead class="table-success text-nowrap">
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã phiếu thu</th>
                                        <th>Ngày thu</th>
                                        <th>Số tiền</th>
                                        <th>Đơn vị thu</th>
                                        <th>HĐĐT</th>
                                        <th>Trạng thái</th>
                                        <th>Ghi chú</th>
