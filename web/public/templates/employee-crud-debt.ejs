                                            <input type="radio" name="selectPhieuThu" id="<%= LIST_ORDER_DETAIL[i].ma_phieu_thu %>" onchange="handleSelectPhieuThu(<%= JSON.stringify(LIST_ORDER_DETAIL[i]) %>);">
